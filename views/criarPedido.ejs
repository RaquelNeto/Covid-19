 <%- include('partials/header') %>

<body>
   
        <div class="container mt-5">
            <h1>Criar Pedidos</h1>

            <div class="row">
                <div class="col-sm-8">
                    <div class="card">
                        <div class="card-body">

                            <!-- Makes POST request to /register route -->
                            <form action="/api/paciente/criarPedido" method="POST">
                                <div class="form-group">
                                    <label for="recomendação">Recomendação:</label>
                                    <input type="text" class="form-control" name="recomendacao"></br>

                                    <p>Pertence a um grupo de risco?</p>
                                    <input type="radio" id="sim" name="grupo_de_risco" value="SIM">
                                    <label for="sim">Sim</label><br>
                                    <input type="radio" id="nao" name="grupo_de_risco" value="NÃO">
                                    <label for="nao">Não</label><br><br>

                                    <!--Falta fazer o aparecer apenas se responder sim-->
                                    
                                    <label for="pq_risco">Qual o motivo de pertencer a um grupo de risco?</label>
                                    <input type="text" class="form-control" name="pq_risco"></br>
                                   
                                </div>
                                <button type="submit" class="btn btn-dark">Submeter Pedido</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/header') %>
